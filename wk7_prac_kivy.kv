<Widget>:
    canvas.before:
        Color:
            rgba: 0, 1, 1, 1
    color: 1, 0.3, 1, 1
<Button>:
    background_color: 0, 1, 0, 1
<TextInput>:
    background_color: 1, 0, 0, 1
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 64
            on_text: app.handle_calculator()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Label:
        id: output_label
        font_size: 64
        text: '54.717'
        color: (0, 0, 1, 1)